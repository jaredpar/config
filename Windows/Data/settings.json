{
    "editor.wordWrap": "on",
    "[markdown]": {
      "editor.wordWrap": "off",
      "editor.rulers": [80]
    },
    "[powershell]": {
      "editor.tabSize": 2,
      "editor.insertSpaces": true
    },
    "[xml]": {
      "editor.tabSize": 2,
      "editor.insertSpaces": true
    },
    "git.enableSmartCommit": true,
    "editor.renderWhitespace": "all"
}
